{
    "name": "Eyesight",
    "description": "You can tune your eyesight to be able to see in the dark.",
    "type": "origins:multiple",
    "nightvision": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:command",
                    "command": "execute if entity @s[tag=msmp_origins.nightvision]",
                    "comparison": ">=",
                    "compare_to": 1
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:apply_effect",
            "effect": {
                "effect": "minecraft:night_vision",
                "duration": 400,
                "amplifier": 2,
                "is_ambient": true,
                "show_particles": false,
                "show_icon": true
            }
        }
    },
    "toggle": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:command",
                "command": "execute if entity @s[tag=msmp_origins.nightvision]",
                "comparison": ">=",
                "compare_to": 1
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "tag @s remove msmp_origins.nightvision"
                    },
                    {
                        "type": "origins:clear_effect",
                        "effect": "minecraft:night_vision"
                    }
                ]
            },
            "else_action": {
                "type": "origins:execute_command",
                "command": "tag @s add msmp_origins.nightvision"
            }
        },
        "cooldown": 60,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 7
        },
        "key": "secondary"
    }
}