{
    "name": "Charge!",
    "description": "Lunge forward, dealing heavy amounts of damage to anybody in your path.",
    "type": "origins:multiple",
    "charge": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "tp @s ~ ~ ~ ~ 0"
                },
                {
                    "type": "origins:delay",
                    "action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:execute_command",
                                "command": "tag @s add charging"
                            },
                            {
                                "type": "origins:play_sound",
                                "sound": "minecraft:entity.vindicator.celebrate",
                                "volume": 1,
                                "pitch": 1.25
                            },
                            {
                                "type": "origins:play_sound",
                                "sound": "minecraft:entity.generic.explode",
                                "volume": 1,
                                "pitch": 2
                            },
                            {
                                "type": "origins:spawn_particles",
                                "particle": {
                                    "type": "minecraft:block",
                                    "params": "dirt"
                                },
                                "count": 50,
                                "speed": 0,
                                "spread": {
                                    "x": 0.4,
                                    "y": 0,
                                    "z": 0.4
                                }
                            },
                            {
                                "type": "origins:add_velocity",
                                "y": 0.25,
                                "z": 8,
                                "space": "local",
                                "client": true,
                                "server": true
                            }
                        ]
                    },
                    "ticks": 1
                },
                {
                    "type": "origins:delay",
                    "action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:execute_command",
                                "command": "tag @s remove charging"
                            }
                        ]
                    },
                    "ticks": 11
                }
            ]
        },
        "cooldown": 1200,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 1
        },
        "key": "primary"
    },
    "tick": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "execute if entity @s[tag=charging] as @e[distance=..7,tag=!charging] run damage @s 1 minecraft:thrown by @p"
        }
    }
}