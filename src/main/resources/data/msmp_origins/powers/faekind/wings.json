{
    "name": "Fairy Wings",
    "description": "You're able to fly by crouching and holding space!\nIn addition, you will always have slow falling.",
    "type": "origins:multiple",
    "flight": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:command",
                    "command": "execute unless entity @s[tag=msmp_origins.no_flight]",
                    "comparison": ">=",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "msmp_origins:faekind/wings_resource",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "inverted": true,
                    "type": "origins:or",
                    "conditions": [
                        {
                            "type": "origins:gamemode",
                            "gamemode": "creative"
                        },
                        {
                            "type": "origins:gamemode",
                            "gamemode": "spectator"
                        }
                    ]
                },
                {
                    "type": "origins:sneaking"
                }
            ]
        },
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "tag @s remove msmp_origins.regenning_flight"
                },
                {
                    "type": "origins:apply_effect",
                    "effect": {
                        "effect": "minecraft:levitation",
                        "duration": 10,
                        "amplifier": 2,
                        "show_particles": false,
                        "show_icon": false
                    }
                },
                {
                    "type": "origins:change_resource",
                    "resource": "msmp_origins:faekind/wings_resource",
                    "change": -1,
                    "operation": "add"
                },
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:block.amethyst_block.resonate",
                    "volume": 0.25,
                    "pitch": 1.8
                },
                {
                    "type": "origins:spawn_particles",
                    "particle": "minecraft:end_rod",
                    "count": 2,
                    "speed": 0,
                    "spread": {
                        "x": 0.4,
                        "y": 0.3,
                        "z": 0.4
                    },
                    "offset_y": 0.5
                }
            ]
        },
        "cooldown": 0,
        "key": {
            "key": "key.jump",
            "continuous": true
        }
    },
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 200,
        "start_value": 100,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
            "bar_index": 23
        },
        "min_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.generic.burn",
                    "volume": 1,
                    "pitch": 0.75
                },
                {
                    "type": "origins:execute_command",
                    "command": "tag @s add msmp_origins.no_flight"
                }
            ]
        },
        "max_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.bat.takeoff",
                    "volume": 1,
                    "pitch": 1.25
                },
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.player.levelup",
                    "volume": 1,
                    "pitch": 1.25
                },
                {
                    "type": "origins:execute_command",
                    "command": "tag @s remove msmp_origins.no_flight"
                }
            ]
        }
    },
    "wingregen": {
        "condition": {
            "type": "origins:command",
            "command": "execute if entity @s[tag=msmp_origins.regenning_flight]",
            "comparison": ">=",
            "compare_to": 1
        },
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "msmp_origins:faekind/wings_resource",
                    "change": 5,
                    "operation": "add"
                }
            ]
        }
    },
    "slowfall": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:apply_effect",
                    "effect": {
                        "effect": "minecraft:slow_falling",
                        "duration": 5,
                        "amplifier": 0,
                        "show_particles": false,
                        "show_icon": false
                    }
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "inverted": true,
                        "type": "origins:power_active",
                        "power": "msmp_origins:faekind/wings_flight"
                    },
                    "if_action": {
                        "type": "origins:execute_command",
                        "command": "tag @s add msmp_origins.regenning_flight"
                    }
                }
            ]
        }
    }
}